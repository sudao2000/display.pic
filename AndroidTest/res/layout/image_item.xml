<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/good_list_bg"
    android:orientation="vertical" >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/body" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/recomment_margin"
            android:background="@drawable/body_cont_bg"
            android:gravity="center" >

            <ImageView
                android:id="@+id/gooditem_photo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="1.5dp"
                android:src="@drawable/default_image" />
        </LinearLayout>


    </FrameLayout>
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp" >

        <TextView
            android:id="@+id/good_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="2dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:layout_alignParentLeft="true"
            android:textColor="#000000" 
            android:text="description"/>

        <ImageButton
            android:background="@drawable/i_like"
            android:id="@+id/i_like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="18dp"
            android:layout_alignParentRight="true"/>

        <TextView
            android:visibility="gone"
            android:id="@+id/i_reblog"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_toLeftOf="@id/i_like"
            android:layout_marginLeft="10dp"
            android:background="#c4f4f3f6"
            android:gravity="center"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:textColor="#777777"
            android:textSize="12sp" />
    </RelativeLayout>
</LinearLayout>